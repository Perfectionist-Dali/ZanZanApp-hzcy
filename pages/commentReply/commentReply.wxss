@import '../../style/weui.wxss';

.comments_user_headpic{
  float:left;
  width: 36px;
  height: 36px;
  border-radius: 18px;
}
.comments_userPic{
  float: left;
  display: flex;
  flex-direction: column;
  width: 12%;
  align-items: center;
}
.comments_details-top{
  display: inline-block;
  width: 90%;
  text-align: left;
  margin-top: 15px;
  font-size: 15px;
  color: #6C6C6C;
  position: relative;
  bottom: 12px;
}
.comments_details{
  display: inline-block;
  width: 90%;
  text-align: left;
  margin-top: 14px;
  font-size: 15px;
  color: #6C6C6C;
  position: relative;
  bottom: 12px;
}
.comments_detail-top{
  position: relative;
  left: 5px;
  bottom: 5px;
  float: left;
  width: 84%;
  display: flex;
  flex-direction: column;
  font-size: 16px;
  margin-left: 6px;
}
.comments_detail-top .discuss{
  font-size: 16px;
}
.comments_detail{
  position: relative;
  float: right;
  width: 92%;
  display: flex;
  flex-direction: column;
  background: #F0F0F0;
  border-radius: 5px;
}
.user-nickname{
  position: relative;
  left: 10px;
  top: -4px;
}
.user_name{
  color:	#8E8E8E;
}
.discuss{
  margin-top: 12px;
  font-size: 15px;
  color:#000000;
  line-height: 1.5em;
}

.discuss_footer_time{
  font-size: 13px;
  color:#ADADAD;
  height: 20px;
  margin-top: 20px;
}

.discuss_footer{
  font-size: 12px;
  color:#ADADAD;
  height: 20px;
  margin-top: 10px;
}
.discuss_footer text{
  position: relative;
  top: 0px;
  float: left;
}
.favor_discuss{
  float: left;
  width: 16px;
  height: 14px;
}
.favor{
  float: right;
  width: 85px;
  position: relative;
  top: 3px;
}
.favor_discuss_nums{
  float: left;
  width:50px;
  position: relative;
  left:4px;
  line-height: 16px;
}
.complaint_discuss{
  float: right;
  width:20px;
  position: relative;
  left:3px;
  line-height: 6px;
  font-size: 20px;
}
.show-more{
  width: 22px;
  height: 22px;
  float: right;
}
.take-good{
  font-size: 15px;
  color:#ff7575;
  left: 8px;
  top: 3px;
  position: relative;
  font-weight: bold;
}
.discuss-text{
  display: inline-block;
  width: 90%;
  text-align: left;
  margin-top: 18px;
  margin-bottom: 10px;
  font-weight: bold;
  font-size: 16px;
  color:#3C3C3C;
}
.reply-title{
  display: inline-block;
  width: 100%;
  text-align: left;
  margin-top: 10px;
  margin-bottom: 10px;
  font-weight: bold;
  font-size: 16px;
  color:#3C3C3C;
  float: right;
}
.reply-content{
  font-size: 15px;
  color: #000000;
  line-height: 1.5em;
  margin-top: 28px;
}
.reply-boot-content{
  width: 92%;
  position: relative;
  left: 2px;
}
.reply-title-top{
  margin-top: 20px;
}
.comment-reply-view{
  width:100%;
  display: inline-block;
  text-align:center;
  border-bottom: 7px solid #F0F0F0;
}
.comment-reply-list{
  width:100%;
  display: inline-block;
  text-align:center;
}
.weui-loadmore__tips{
  color:#ff7575;
}
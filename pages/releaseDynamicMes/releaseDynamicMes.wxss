/* miniprogram/pages/releaseDynamicMes/releaseDynamicMes.wxss */
@import '../../style/weui.wxss';

.navbar {
  z-index: 2;
  /*background-color: #F0F0F0;*/
  width: 100%;
  height: 50px;
  flex: none;  
  display: flex;
}

.navbar .item{  
  position: relative;   
  text-align: center;  
  font-size: 16px;
  line-height: 80rpx; 
  flex: auto;
  display: inline-block;
}  

.navbar .item.active{  
  color: black;
}  

.navbar .item.active:after{  
  content: "";  
  display: block; 
  position: absolute;  
  bottom: 0;  
  left: 0;  
  right: 0; 
  height: 4rpx;  
  background: black;  
}

.un-release{
  left:10rpx;
  color:#3C3C3C;
  margin: 14px 0 0 8px;
}

.release-mes{
  right:20rpx;
  margin: 14px 8px 0 0px;
}

.un-release-btn{
  text-align: center;
  width:48px;
  height:30px;
  line-height: 32px;
  font-size: 18px;
}

.release-mes-btn{
  float: right;
  text-align: center;
  width:48px;
  height:30px;
  background-color: #d13d4b;
  color:#FFFFFF;
  border-radius: 4px;
  line-height: 30px;
}


.comments_userPic{
  float: left;
  flex-direction: column;
  width:80px;
  align-items: center;
}
.comments_user_headpic{
  float:left;
  width: 75px;
  height: 75px;
}
.comments_details-top{
  display: inline-block;
  width: 90%;
  text-align: left;
  margin-top: 15px;
  font-size: 15px;
  color: #6C6C6C;
  position: relative;
  bottom: 12px;
}
.comments_details{
  display: inline-block;
  width: 90%;
  height: 90px;
  text-align: left;
  margin-top: 14px;
  font-size: 15px;
  color: #6C6C6C;
  position: relative;
}
.comments_detail-top{
  position: relative;
  left: 5px;
  float: left;
  width: 84%;
  display: flex;
  flex-direction: column;
  font-size: 16px;
  margin-left: 6px;
}
.comments_detail-top .discuss{
  font-size: 16px;
}
.comments_detail{
  position: relative;
  left: 5px;
  float: left;
  width: 70%;
  display: flex;
  flex-direction: column;
}
.comments_word{
  position: relative;
  float: left;
  /* width: 100%; */
  height: 88px;
  display: flex;
  flex-direction: column;
}
.dynamic_detail{
  color:#000000;
  font-size:15px;
  height: 50px;
}
.dynamic_word_detail{
  color:#000000;
  font-size:15px;
  height: 55px;
}
.images-num{
  float: left;
  width:50px;
  color:#ff7575;
  font-size:13px;
}
.send-date{
  float: left;
  margin-left: 10px;
  color:#9D9D9D;
  font-size:13px;
}
.delete-dynamic{
  float: left;
  margin-left: 10px;
  color:#9D9D9D;
  font-size:13px;
}
.word-send-date{
  float: left;
  width:100px;
  color:#9D9D9D;
  font-size:13px;
}
.discuss_footer{
  font-size: 13px;
  color:#ADADAD;
  height: 30px;
}
.discuss_footer text{
  position: relative;
  top: 15px;
  float: left;
}
.dynamic-line{
  width:100%;
  height: 100px;
  border-bottom: 1px solid #F2F2F2;
}
.notification-alert{
  position:fixed;
  width:100%;
  height:50px;
  background: #fff;
  z-index: 999;
  opacity: 0.98;
  background:	#F2F2F2;
}
.notice-text{
  display: inline-block;
  margin-top:10px;
  width:40%;
  height: 30px;
  line-height: 30px;
  border-radius: 20px;
  color:#d13d4b;
  background: #FFD2D2;
  font-size:14px;
  opacity: 0.95;
  font-weight: bold;
}
.weui-loadmore__tips{
  color:#ff7575;
}
.user_center_gender{
  width: 12px;
  height: 12px;
}
.dynamicImage{
  position: relative;
  top: 16px;
  left:3px;
  margin: 2px;
}
.mes-userheader-img {
  position: relative;
  top: 10px;
  width: 40px;
  height: 40px;
  border-radius: 20px;
}
.msg_not_read{
  width:100%;
  display: inline-block;
  text-align:center;
}
.dynamicContent{
  float:left;
}
.dynamic-warning{
  float:right;
  width:22px;
}
.dynamic-warning > image{
  width:22px;
  height:22px;
}
@import '../../style/weui.wxss';

.container{
    padding: 1.5rem;
    margin-top: 20px;
    font-size: 0.9rem;
    line-height: 1.5rem;
}
.row{
    display: flex;
    align-items: center;
    margin-bottom: 0.8rem;
    width: 100%;
}
.row text{
    flex-grow: 1;
    text-align: right;
}
.row input{
    font-size: 0.7rem;
    color: #ccc;
    flex-grow: 3;
    border: 1px solid #0099CC;
    display: inline-block;
    border-radius: 0.3rem;
    box-shadow: 0 0 0.15rem #aaa;
    padding: 0.3rem;
}
.row button{
    background: #d13d4b;
    width: 100%;
    padding: 0 2rem;
    margin-top: 20px;
    height: 50px;
    line-height: 50px;
}


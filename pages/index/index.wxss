}

.btn2 {
  width: 80%;
  margin-top: 20rpx;
  background-color: #ffff;
  color: rgb(0, 0, 0);
  border-radius: 98rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  border: 1px solid #d13d4b;
}

.btnImg1 {
  width: 77rpx;
  height: 77rpx;
}
.btnImg2 {
  margin-left: 12rpx;
  margin-bottom: 2px;

  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.goto-contact {
  color: #66ccff
}

.inputs {
  background: #fff;
  margin: 1px;
}
.welcome-image{
  width:100%;
  height:500rpx
}
button{
  background-color: #42c02e;

@import '../../style/weui.wxss';

.comments_details-top{
  display: inline-block;
  width: 90%;
  text-align: left;
  margin-top: 15px;
  font-size: 15px;
  position: relative;
  bottom: 12px;
}

.comments_details{
  display: inline-block;
  width: 90%;
  text-align: left;
  font-size: 16px;
  position: relative;
}
.comments_detail-top{
  position: relative;
  left: 5px;
  float: left;
  width: 84%;
  display: flex;
  flex-direction: column;
  font-size: 16px;
  margin-left: 6px;
}
.comments_detail-top .discuss{
  font-size: 16px;
}
.discuss_footer{
  font-size: 13px;
  color:#ADADAD;
  height: 30px;
}
.discuss_footer text{
  position: relative;
  top: 15px;
  float: left;
}
.agree-user{
  height: 54px;
  width: 100%;
  line-height: 54px;
  border-bottom: 1px solid #c7c7c7;
}

.weui-loadmore__tips{
  color:#ff7575;
}
.sys_notice_content{
  color: #6C6C6C;
}
.no-read{
  color: #040404;
  background: #D8D8D8;
  font-weight: bold;
}
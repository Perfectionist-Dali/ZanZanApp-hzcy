/* miniprogram/component/image-wrapper/image-wrapper.wxss */
.image-wrapper {
  display: inline-block;
  position: relative;
  width: 100%;
  float: left;
  font-size: 12px;
  background: #aaa;
}

.image-wrapper:before {
  content: "";
  display: block;
  padding-top: 100%;
}

.image-inner {
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  padding: 0;
  text-align: center;
  vertical-align: center;
  text-transform: uppercase;
  color: #fff;
}

.placeholder {
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  padding: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #fff;
}
